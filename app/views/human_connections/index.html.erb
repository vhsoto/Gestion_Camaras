<h1>Listado c치maras Conexi칩n Humana</h1>
<br>
  
  <%= link_to 'Agregar c치mara', new_human_connection_path, class: "btn btn-primary btn-sm" %>
  <%= link_to root_path, class: "btn btn-warning btn-sm" do %>
    <i class="fa fa-home"></i>
  <% end %>


<hr>

<%= form_tag import_human_connections_path, multipart: true do %>
<div class="form-group">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= file_field_tag :file, required: true, class: "btn btn-sm btn-primary" %>
      <p class="help-block"><strong>Nota: El archivo debe ser .csv</strong></p>
    </div>
    <div>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>  
        <i class="fa fa-arrow-circle-up"></i>
      <% end %>
    </div>
  </div>
</div>  

<% end %>


<table class="table">
  <thead>
    <tr>
      <th>Spot</th>
      <th>Orientation</th>
      <th>Address</th>
      <th>Strangeness fvs</th>
      <th>Strangeness mebog</th>
      <th>Polygon</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @human_connections.each do |human_connection| %>
      <tr>
        <td><%= human_connection.spot %></td>
        <td><%= human_connection.orientation %></td>
        <td><%= human_connection.address %></td>
        <td><%= human_connection.strangeness_fvs %></td>
        <td><%= human_connection.strangeness_mebog %></td>
        <td><%= human_connection.polygon %></td>
        <td><%= human_connection.condition %></td>
        <td><%= link_to human_connection do %>
              <i class="fa fa-search"></i>
            <% end %>
        </td>
        <td><%= link_to edit_human_connection_path(human_connection) do %>
              <span class="label label-warning"><i class="fa fa-pencil"></i></span>
            <% end %>
        </td>
        <td><%= link_to human_connection, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="label label-danger"><i class="fa fa-trash"></i></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

