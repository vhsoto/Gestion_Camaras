<p id="notice"><%= notice %></p>


<h1>Listing Human Connections</h1>

<h4>Subir archivo plano de cámaras</h4>
<br>
<%= form_tag import_human_connections_path, multipart: true do %>
<div class="form-group">
  <div class="row">
    <div class="col-md-4 col-lg-4">
      <%= file_field_tag :file, required: true, class: "btn btn-info" %>
      <p class="help-block">Nota: La extensión del archivo debe ser .csv.</p>
    </div>
  </div>
</div>  
<%= submit_tag "cargar cámaras", class: "btn btn-info btn-sm" %>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th>Spot</th>
      <th>Orientation</th>
      <th>Address</th>
      <th>Strangeness fvs</th>
      <th>Strangeness mebog</th>
      <th>Polygon</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @human_connections.each do |human_connection| %>
      <tr>
        <td><%= human_connection.spot %></td>
        <td><%= human_connection.orientation %></td>
        <td><%= human_connection.address %></td>
        <td><%= human_connection.strangeness_fvs %></td>
        <td><%= human_connection.strangeness_mebog %></td>
        <td><%= human_connection.polygon %></td>
        <td><%= human_connection.condition %></td>
        <td><%= link_to 'Show', human_connection %></td>
        <td><%= link_to 'Edit', edit_human_connection_path(human_connection) %></td>
        <td><%= link_to 'Destroy', human_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Human connection', new_human_connection_path %>
