<%= form_for(@human_connection) do |f| %>
  <% if @human_connection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@human_connection.errors.count, "error") %> prohibited this human_connection from being saved:</h2>

      <ul>
      <% @human_connection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :spot %><br>
    <%= f.text_field :spot %>
  </div>
  <div class="field">
    <%= f.label :orientation %><br>
    <%= f.text_field :orientation %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>
  <div class="field">
    <div class="row">
      <div class="col-md-3 col-lg-3">
        <%= f.label :cosec %><br>
        <%= f.select :cosec,  options_for_select([['Chapinero', 'Chapinero'], ['Kennedy', 'Kennedy'], ['Pte Aranda', 'Pte Aranda'], ['Ciudad Bolivar', 'Ciudad Bolivar'], ['CAD', 'CAD']], @human_connection.cosec), options ={:prompt => "Seleccione un cosec"},class: "form-control" %>
      </div>
    </div>     
  </div>
  <div class="field">
    <%= f.label :polygon %><br>
    <%= f.check_box :polygon %>
  </div>
  <div class="field">
    <%= f.label :condition %><br>
    <%= f.check_box :condition %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
