<p id="notice"><%= notice %></p>

<h1>Lista de cámaras arrendadas</h1>
<br>
 
  <%= link_to 'Agregar cámara', new_leased_path, class: "btn btn-primary btn-sm" %>
  <%= link_to root_path, class: "btn btn-warning btn-sm" do %>
    <i class="fa fa-home"></i>
  <% end %>


<hr>

<%= form_tag import_leaseds_path, multipart: true do %>
<div class="form-group">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= file_field_tag :file, required: true, class: "btn btn-sm btn-info" %>
      <p class="help-block">Nota: El archivo debe ser .csv</p>
    </div>
    <div>
      <%= button_tag(type: 'submit', class: "btn btn-info") do %>
  
        <i class="fa fa-arrow-circle-up"></i>
      <% end %>
    </div>
  </div>
</div>  

<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Spot</th>
      <th>Orientation</th>
      <th>Address</th>
      <th>Location</th>
      <th>Cosec</th>
      <th>Polygon</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaseds.each do |leased| %>
      <tr>
        <td><%= leased.spot %></td>
        <td><%= leased.orientation %></td>
        <td><%= leased.address %></td>
        <td><%= leased.location %></td>
        <td><%= leased.cosec %></td>
        <td><%= leased.polygon %></td>
        <td><%= leased.condition %></td>
        <td><%= link_to 'Show', leased %></td>
        <td><%= link_to 'Edit', edit_leased_path(leased) %></td>
        <td><%= link_to 'Destroy', leased, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar cámara', new_leased_path, class: "btn btn-primary btn-sm" %>
