<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<h4>Subir archivo plano de cámaras</h4>
<br>
<%= form_tag import_schools_path, multipart: true do %>
<div class="form-group">
  <div class="row">
    <div class="col-md-4 col-lg-4">
      <%= file_field_tag :file, required: true, class: "btn btn-info" %>
      <p class="help-block">Nota: La extensión del archivo debe ser .csv.</p>
    </div>
  </div>
</div>  
<%= submit_tag "cargar cámaras", class: "btn btn-info btn-sm" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Spot</th>
      <th>Orientation</th>
      <th>Address</th>
      <th>Strangeness fvs</th>
      <th>Strangeness mebog</th>
      <th>Polygon</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.spot %></td>
        <td><%= school.orientation %></td>
        <td><%= school.address %></td>
        <td><%= school.strangeness_fvs %></td>
        <td><%= school.strangeness_mebog %></td>
        <td><%= school.polygon %></td>
        <td><%= school.condition %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
