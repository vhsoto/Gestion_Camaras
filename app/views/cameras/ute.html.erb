<h1 class="text-center">Listado cámaras UTE</h1>
<br>   
  <%= render "layouts/inicio" %>
<hr>
<%= render "layouts/buscar" %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table">
      <thead>
        <tr>
          <th>Cantidad</th>
          <th>Polígono</th>
          <th>Punto</th>
          <th>Orientación</th>
          <th>Dirección</th>
          <th>Localidad</th>
          <th>Cosec</th>      
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="searchable">
        <% @utes.each do |camera| %>
          <tr>
            <td><%= camera.qty %></td>
            <td><%= camera.polygon ? poligono : no_poligono %></td>
            <td><%= camera.spot %></td>
            <td><%= camera.orientation %></td>
            <td><%= camera.address %></td>           
            <td><%= camera.location %></td>
            <td><%= camera.cosec %></td>
            <td><% if camera.condition? %>
                  <div class="col-sm-1">
                      <div class="round round-sm green">
                          <%= bueno %>
                      </div>
                  </div>
                <% else %>
                  <div class="col-sm-1">
                      <div class="round round-sm red">
                          <%= malo %>
                      </div>
                  </div>        
                <% end %>
            </td>
            <td><%= link_to camera do %>
                <i class="fa fa-search"></i>
                <% end %>
            </td>
            <td><%= link_to edit_camera_path(camera) do %>
                <i class="fa fa-pencil"></i>
                <% end %>
            </td>
            <td><%= link_to camera, method: :delete, data: { confirm: 'Está seguro?' }  do %>
                <span><i class="fa fa-trash btn-danger"></i></span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
</table>
<br>
<div class="text-center">
  <%= paginate @utes, :theme => 'twitter-bootstrap-3',
                         :pagination_class => "pagination-sm pagination-centered" %>
</div>