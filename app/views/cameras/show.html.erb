<h3><p>Cámara perteneciente a: <strong><%= proyecto @camera.project %></strong></p></h3>
<br>
<%= link_to 'Atrás', cameras_path, class: "btn btn-info btn-sm" %> <%= link_to root_path, class: "btn btn-primary btn-sm pull-right"  do%>
  <i class="fa fa-home"></i>
<% end %>
<br><br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Polígono</th>
        <th>Punto</th>
        <th>Orientación</th>
        <th>Dirección</th>
        <th>Localidad</th>
        <th>Cosec</th>
        <th>Condición</th>
        <th>Coordenadas</th>
        <th colspan="1"></th>
      </tr>
        <tbody>
          <tr>
            <td><%= @camera.polygon ? poligono : no_poligono %></td>
            <td><%= @camera.spot %></td>
            <td><%= @camera.orientation %></td>
            <td><%= @camera.address %></td>
            <td><%= @camera.location %></td>
            <td><%= @camera.cosec %></td>
            <td><% if @camera.condition? %>
                  <div class="col-sm-1">
                      <div class="round round-sm green">
                          <%= bueno %>
                      </div>
                  </div>
                <% else %>
                  <div class="col-sm-1">
                      <div class="round round-sm red">
                          <%= malo %>
                      </div>
                  </div>        
                <% end %>
            </td>
            <td><%= @camera.lat %> <%= @camera.lng %></td>
            <td><%= link_to edit_camera_path(@camera) do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
            </td>
          </tr>
        </tbody>      
    </thead>
  </table>
</div>

<br>

<div class="panel panel-info">
  <div class="panel-heading">
    <br>
    <h3 class="panel-title">
      <%= link_to new_camera_event_path(@camera), class: "pull-right" do %>
        <i class="fa fa-plus"></i> 
      <% end %>
    <a href="#" data-toggle="collapse" data-target="#medicamentosAcordeon" aria-expanded="false" aria-controls="medicamentosAcordeon"><strong>Novedades</strong></a>
    </h3> 
    <br>      
  </div>
  <div class="panel-body">
    <div class="collapse" id="medicamentosAcordeon">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Novedad Mebog</th>
              <th>Novedad FVS</th>              
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <%= render @camera.events %>            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Atrás', cameras_path, class: "btn btn-info btn-sm" %> <%= link_to root_path, class: "btn btn-primary btn-sm pull-right"  do%>
  <i class="fa fa-home"></i>
<% end %>
<br>
<br>
