<h1 class="text-center">Listado completo de cámaras</h1>
<p class="text-center">Conexión Humana, Arrendadas, Propias, Colegios, Transmilenio y UTE</p>
<hr>
<%= form_tag(import_cameras_path, multipart: true) do %>
<div class="form-group">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= file_field_tag :file, required: true, class: "btn btn-sm btn-info" %>
      <p class="help-block"><strong>Nota: El archivo debe ser .csv</strong></p>
    </div>
    <div>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>  
        <i class="fa fa-arrow-circle-up"></i>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<hr>
<div class="row text-center">
  <%= link_to "CONEXIÓN HUMANA(1500)", conexion_humana_cameras_path, class: "btn btn-info btn-lg" %>
  <%= link_to "PROPIAS(221)", propia_cameras_path, class: "btn btn-info btn-lg" %>
  <%= link_to "ARRENDADAS(200)", arrendada_cameras_path, class: "btn btn-info btn-lg" %> 
  <%= link_to "COLEGIOS", colegio_cameras_path, class: "btn btn-info btn-lg" %> 
  <%= link_to "TRANSMILENIO", transmilenio_cameras_path, class: "btn btn-info btn-lg" %>
  <%= link_to "UTE - 175(2K)", ute_cameras_path, class: "btn btn-info btn-lg" %>  
  <%= link_to root_path, class: "btn btn-primary btn-lg" do %>
    <i class="fa fa-home"></i>
  <% end %>
</div>
<hr>

<%= render "layouts/buscar" %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Polígono</th>
          <th>Proyecto</th>
          <th>Punto</th>
          <th>Orientación</th>
          <th>Dirección</th>
          <th>Localidad</th>
          <th>Cosec</th>      
          <th>Condición</th>
          <th>Ubicación</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="searchable">
        <% @cameras.each do |camera| %>
          <tr>
             <td><%= camera.polygon ? poligono : no_poligono %></td>
            <td><%=  proyecto camera.project %></td>
            <td><%= camera.spot %></td>
            <td><%= camera.orientation %></td>
            <td><%= camera.address %></td>           
            <td><%= camera.location %></td>
            <td><%= camera.cosec %></td>
            <td><% if camera.condition? %>
                  <div class="col-sm-1">
                      <div class="round round-sm green">
                          <%= bueno %>
                      </div>
                  </div>
                <% else %>
                  <div class="col-sm-1">
                      <div class="round round-sm red">
                          <%= malo %>
                      </div>
                  </div>        
                <% end %>
            </td>            
            <td><%# camera.lat %></td>
            <td><%# camera.lng %></td>
            <td><%# camera.project %></td>
            <td><%= link_to camera do %>
                <i class="fa fa-search"></i>
                <% end %>
            </td>            
            <td><%= link_to camera, method: :delete, data: { confirm: 'Está seguro?' }  do %>
                <span><i class="fa fa-trash btn-danger"></i></span>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
</table>
<br>