<%= form_for(@camera) do |f| %>
  <% if @camera.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@camera.errors.count, "error") %> prohibited this camera from being saved:</h2>

      <ul>
      <% @camera.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">
        <%= f.label :project, "Proyecto" %><br>
        <%= f.select :project,  options_for_select([['Conexión Humana', '1'], ['Propias', '2'], ['Arrendadas', '3'], ['Colegios', '4'], ['Transmilenio', '5'], ['UTE', '6']], @camera.project), options ={:prompt => "Seleccione un proyecto"}, class: "form-control" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-1 col-md-1 col-lg-1">  
        <%= f.label :spot, "Punto" %><br>
        <%= f.text_field :spot, class: "form-control"  %>
      </div>
      <div class="col-sm-1 col-md-1 col-lg-1">  
        <%= f.label :qty, "Cantidad" %><br>
        <%= f.number_field :qty, min: 1, class: "form-control"  %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">  
        <%= f.label :orientation, "Orientación" %><br>
        <%= f.text_field :orientation, class: "form-control" %>
      </div>
    </div>
   </div> 
  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">  
        <%= f.label :address, "Dirección" %><br>
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">  
        <%= f.label :location, "Localidad" %><br>
        <%= f.select :location, options_for_select([['15-Antonio Nariño', '15-Antonio Nariño'], ['12-Barrios Unidos', '12-Barrios Unidos'], ['7-Bosa', '7-Bosa'], ['2-Chapinero', '2-Chapinero'], ['19-Ciudad Bolívar', '19-Ciudad Bolívar'], ['10-Engativá', '10-Engativá'], ['9-Fontibón', '9-Fontibón'], ['8-Kennedy', '8-Kennedy'], ['7-La Candelaria', '7-La Candelaria'], ['14-Los Mártires', '14-Los Mártires'], ['16-Pte Aranda', '16-Pte Aranda'], ['18-Rafael Uribe Uribe', '18-Rafael Uribe Uribe'], ['4-San Cristóbal', '4-San Cristóbal'], ['3-Santa Fe', '3-Santa Fe'], ['11-Suba', '11-Suba'], ['13-Teusaquillo', '13-Teusaquillo'], ['6-Tunjuelito', '6-Tunjuelito'], ['1-Usaquén', '1-Usaquén'], ['5-Usme', '5-Usme']], @camera.location), options ={:prompt => "Seleccione una localidad"}, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3 col-lg-3">
        <%= f.label :cosec %><br>
        <%= f.select :cosec,  options_for_select([['Cosec 1', 'Cosec 1'], ['Cosec 2', 'Cosec 2'], ['Cosec 3', 'Cosec 3'], ['Cosec 4', 'Cosec 4']], @camera.cosec), options ={:prompt => "Seleccione un cosec"}, class: "form-control" %>
      </div>
    </div>     
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2 col-md-2 col-lg-2">  
        <%= f.label :polygon, "Polígono" %><br>
        <%= f.check_box :polygon, :data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'SI', 'off-text'=>'NO' } %>
      </div>
      <div class="col-sm-2 col-md-2 col-lg-2">  
        <%= f.label :condition, "Estado" %><br>
        <%= f.check_box :condition, :data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'Bien', 'off-color'=>'danger', 'off-text'=>'Mal' } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2 col-md-2 col-lg-2">  
        <%= f.label :lat, "Latitud" %><br>
        <%= f.text_field :lat, class: "form-control" %>
      </div>
      <div class="col-sm-2 col-md-2 col-lg-2">  
        <%= f.label :lng, "Longitud" %><br>
        <%= f.text_field :lng, class: "form-control" %>
      </div>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-sm btn-info" %>
  
<% end %>
