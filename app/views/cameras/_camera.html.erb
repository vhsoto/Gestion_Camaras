<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Polígono</th>
      <th>Proyecto</th>
      <th>Punto</th>
      <th>Orientación</th>
      <th>Dirección</th>
      <th>Localidad</th>
      <th>Cosec</th>      
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="searchable">
    <% @cameras.each do |camera| %>
      <tr>
        <td><%= camera.qty %></td>
        <td><%= camera.polygon ? poligono : no_poligono %></td>
        <td><%= proyecto camera.project %></td>
        <td><%= camera.spot %></td>
        <td><%= camera.orientation %></td>
        <td><%= camera.address %></td>           
        <td><%= camera.location %></td>
        <td><%= camera.cosec %></td>
        <td><% if camera.condition? %>
              <div class="col-sm-1">
                  <div class="round round-sm green">
                      <%= bueno %>
                  </div>
              </div>
            <% else %>
              <div class="col-sm-1">
                  <div class="round round-sm red">
                      <%= malo %>
                  </div>
              </div>        
            <% end %>
        </td>           
        <td><%= link_to camera do %>
            <i class="fa fa-search"></i>
            <% end %>
        </td>            
        <td><%= link_to camera, method: :delete, data: { confirm: 'Está seguro?' }  do %>
            <span><i class="fa fa-trash btn-danger"></i></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>      
</table>