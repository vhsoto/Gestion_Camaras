<h2>Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">
        <%= f.label :email, "Correo" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">
        <%= f.label :password, "ContraseÃ±a" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
          <%= f.check_box :remember_me, :data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'SI', 'off-text'=>'NO' } %>
          <%= f.label :remember_me, "Recordarme" %>
      </div>
    </div>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar", class: "btn btn-sm btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
